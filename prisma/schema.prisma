datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model UserState {
  phone     String   @id
  state     String
  lastMsg   String?
  updatedAt DateTime @updatedAt
}

model Message {
  id        Int      @id @default(autoincrement())
  phone     String
  direction String   // 'in' | 'out'
  body      String
  createdAt DateTime @default(now())
}
